@page "/"
@using JournalApp.Services
@inject AuthenticationStateService AuthState
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

@* 
[VIVA INFO]: This is the ROOT page of the app. 
Its purpose is to act as a Router/Redirector based on Auth state.
*@

@if (isLoading)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Preparing your space...</p>
    </div>
}

@code {
    private bool isLoading = true;

    protected override void OnInitialized()
    {
        // [BYPASS]: Directly go to dashboard as per new requirements.
        Navigation.NavigateTo("/dashboard");
    }
}

<style>
    .loading-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .spinner {
        border: 4px solid #E7ECF3;
        border-top: 4px solid #6B7FD1;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        animation: spin 1s linear infinite;
        margin-bottom: 20px;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>